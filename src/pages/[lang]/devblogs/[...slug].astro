---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import Sidebar from '../../../components/Sidebar.astro';
import { useTranslations } from '../../../i18n/ui';

export async function getStaticPaths() {
  const posts = await getCollection('devblogs');
  
  return posts.map((post) => {
    const parts = post.id.split('/');
    const lang = parts[0];
    const slug = parts.slice(1).join('/').replace(/\.md$/, '');
    return {
      params: { lang, slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const lang = Astro.params.lang as any;
const t = useTranslations(lang);

const { Content, headings } = await post.render();
const hasH1Heading = headings.some(h => h.depth === 1);

const publishedDate = post.data.pubDate.toLocaleDateString();
const publishedText = `${t('published')}: ${publishedDate}`;
const authorText = post.data.author ? `${t('author')}: ${post.data.author}` : '';
---

<BaseLayout title={post.data.title + ' - DevScholar'} lang={lang}>
	<Header slot="header" />
	<Sidebar slot="sidebar" />
	
	<article class="devblogs-content">
		{!hasH1Heading && (
			<>
				<h1>{post.data.title}</h1>
				<p class="published"><small>{publishedText}{authorText && <span class="separator"> | </span>}{authorText}</small></p>
				<Content />
			</>
		)}
		{hasH1Heading && (
			<>
				<h1 class="title">{post.data.title}</h1>
				<p class="published"><small>{publishedText}{authorText && <span class="separator"> | </span>}{authorText}</small></p>
				<div class="content">
					<Content />
				</div>
			</>
		)}
	</article>
</BaseLayout>

<style>
	.devblogs-content {
		line-height: 1.6;
	}
	.devblogs-content h1.title {
		text-align: center;
		margin-bottom: 5px;
	}
	.devblogs-content .published {
		text-align: center;
		margin: 0 0 20px 0;
		color: #666;
	}
	.devblogs-content .content :global(h1:first-of-type) {
		display: none;
	}
</style>
