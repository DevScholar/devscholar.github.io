---
import { getLangFromUrl } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
---

<footer class="site-footer">
  <hr />
  <p>&copy; DevScholar</p>
</footer>

<style>
  .site-footer {
    padding: 10px;
    text-align: center;
    margin-top: auto;
  }
  .site-footer p {
    margin: 5px 0;
    font-size: 14px;
  }
  
  .overlay {
    display: none;
  }
  
  @media (max-width: 768px), (orientation: portrait) {
    .container {
      display: block;
    }
    
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }
    
    .overlay.active {
      display: block;
    }
  }
</style>
